<bpel:process name="AutoCheck"
         targetNamespace="http://soacourse.unsw.edu.au/autocheck"
         suppressJoinFailure="yes"
         xmlns:tns="http://soacourse.unsw.edu.au/autocheck"
         xmlns:ns1="http://pdv.soacourse.unsw.edu.au"
         xmlns:ns2="http://crv.soacourse.unsw.edu.au"
         xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         >

    <!-- Import the client WSDL -->
	<bpel:import location="AutoCheckArtifacts.wsdl" namespace="http://soacourse.unsw.edu.au/autocheck" 
	        importType="http://schemas.xmlsoap.org/wsdl/" />
    <bpel:import location="PDVCheckService.wsdl" namespace="http://pdv.soacourse.unsw.edu.au"
            importType="http://schemas.xmlsoap.org/wsdl/" />
    <bpel:import location="CRVCheckService.wsdl" namespace="http://crv.soacourse.unsw.edu.au"
            importType="http://schemas.xmlsoap.org/wsdl/" />
         
    <!-- ================================================================= -->         
    <!-- PARTNERLINKS                                                      -->
    <!-- List of services participating in this BPEL process               -->
    <!-- ================================================================= -->         
    <bpel:partnerLinks>
        <!-- The 'client' role represents the requester of this service. -->
        <bpel:partnerLink name="client"
                     partnerLinkType="tns:AutoCheckLinkType"
                     myRole="checker"
                     />
        <bpel:partnerLink name="pdvChecker"
                     partnerLinkType="tns:PDVCheckLinkType"
                     partnerRole="pdvChecker"
                     />
        <bpel:partnerLink name="crvChecker"
                     partnerLinkType="tns:CRVCheckLinkType"
                     partnerRole="crvChecker"
                     />
    </bpel:partnerLinks>
  
    <!-- ================================================================= -->         
    <!-- VARIABLES                                                         -->
    <!-- List of messages and XML documents used within this BPEL process  -->
    <!-- ================================================================= -->         
    <bpel:variables>
        <!-- Reference to the message passed as input during initiation -->
        <bpel:variable name="request"
                  messageType="ns1:PDVCheck"/>
                  
        <!-- 
          Reference to the message that will be returned to the requester
          -->
        <bpel:variable name="response"
                  messageType="ns1:PDVCheckResponse"/>
    </bpel:variables>

    <!-- ================================================================= -->         
    <!-- ORCHESTRATION LOGIC                                               -->
    <!-- Set of activities coordinating the flow of messages across the    -->
    <!-- services integrated within this business process                  -->
    <!-- ================================================================= -->         
    <bpel:sequence name="main">
        
        <!-- Receive input from requester. 
             Note: This maps to operation defined in AutoCheck.wsdl 
             -->
        <bpel:receive name="receiveInput" partnerLink="client"
                 portType="ns1:PDVCheckService"
                 operation="PDVCheck" variable="request"
                 createInstance="yes"/>
        <!-- Invoke PDVCheck Service -->
        
        <!-- Generate reply to synchronous request -->
        <bpel:flow name="Flow">
            <bpel:sequence name="PDVSequence">
                <bpel:invoke name="InvokePDV" partnerLink="pdvChecker" portType="ns1:PDVCheckService" operation="PDVCheck" inputVariable="request" outputVariable="pdvResponse">
                </bpel:invoke>
                <bpel:assign validate="no" name="Assign"></bpel:assign>
            </bpel:sequence>
            <bpel:sequence name="CRVSequence">
                <bpel:invoke name="InvokeCRV" partnerLink="crvChecker" portType="ns2:CRVCheckService" operation="CRVCheck" inputVariable="request" outputVariable="crvResponse">
                </bpel:invoke>
                <bpel:assign validate="no" name="Assign1"></bpel:assign>
            </bpel:sequence>
        </bpel:flow>
        
        <bpel:reply name="replyOutput" 
               partnerLink="client"
               portType="ns1:PDVCheckService"
               operation="check" 
               variable="response"
               />
        
    </bpel:sequence>
</bpel:process>

